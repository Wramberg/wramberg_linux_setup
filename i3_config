# Set background
exec --no-startup-id ~/.fehbg

# Lock screen cmd
set $i3lock_cmd i3lock -c 333333
bindsym $mod+Mod1+l exec $i3lock_cmd

# Turn off the screen after X seconds of inactivity
exec --no-startup-id xset dpms 0 0 600

# Lock the PC after X minutes of inactivity
exec --no-startup-id xautolock -time 10 -locker 'i3lock -c 333333'

# Start various tools
exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
exec --no-startup-id udiskie -s -N

# Start terminal intended for scratchpad
exec --no-startup-id mate-terminal --title="scratchpad_term"

# Scratchpad stuff
bindsym $mod+Shift+s move scratchpad
bindsym grave scratchpad show

# Window settings
new_window pixel 2
focus_follows_mouse no

# Some custom keybindings
bindsym $mod+b border toggle
bindsym $mod+F1 move workspace to output left
bindsym $mod+F2 move workspace to output right

# Move scratchpad terminal to scratchpad automatically
for_window [title="scratchpad_term"] move scratchpad
for_window [title="scratchpad_term"] scratchpad show
for_window [title="scratchpad_term"] resize grow right 230px; resize grow left 235 px
for_window [title="scratchpad_term"] move scratchpad

# Move chrome to www workspace always
assign [class="Google-chrome"] 3: www

# Move sublime text to subl workspace always
assign [class="Sublime_text"] 2: subl

# Set arandr in floating always
for_window [title="Screen Layout Editor"] floating enable

# Rofi setup
#set $rofi_keys -key-run mod4+d -key-window mod4+Tab
#exec --no-startup-id rofi $rofi_keys $rofi_opts $rofi_bg $rofi_fg

set $rofi_opts -hide-scrollbar -separator-style none -font "mono 10"
set $rofi_bg -bg "#22252b" -bg-active "#22252b" -bc "#4c7899" -hlbg "#000000" -hlbg-active "#000000"
set $rofi_fg -fg "#FFFFFF"    -hlfg "#FFFFFF"    -fg-active "#4c7899" -hlfg-active "#4c7899"
bindsym mod4+d exec rofi -show run $rofi_opts $rofi_bg $rofi_fg
bindsym mod4+Tab exec rofi -show window $rofi_opts $rofi_bg $rofi_fg

# Set keyboard layout
exec --no-startup-id "setxkbmap -layout gb,dk -option grp:alt_shift_toggle"

